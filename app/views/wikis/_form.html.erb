<div class="row">
  <div class="col-md-8">
    <%= form_for @wiki do |f| %>
    <% if current_user.premium? && @wiki.user == current_user || current_user.admin? %>
      <div class="form-group">
      <%= f.label :private, class: 'checkbox' do %>
      <%= f.check_box :private %> Private wiki
      <% end %>
      </div>
    <% end %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control', placeholder: 'Enter wiki title' %>
      </div>
      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, class: 'form-control', placeholder: 'Enter wiki body' %>
      </div>
      <% if current_user.premium? && @wiki.user == current_user || current_user.admin? %>
      <div class="form-group">
        <%= f.label :collaborator %>
        <%= collection_select( :collaborator, :user_id, User.all, :id, :email, {}, { :multiple => false } ) %>
      </div>
      <% end %>
      <div class="form-group">
        <%= f.submit "Save", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>
