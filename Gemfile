source 'https://rubygems.org'

 # Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
 gem 'rails', '~> 5.1', '>= 5.1.5'
 gem 'dotenv-rails', groups: [:development, :test]

 group :production do
   gem 'pg'
   gem 'rails_12factor'
 end

 group :development do
   gem 'sqlite3'
   gem 'web-console', '~> 2.0'
 end

 group :test do
  gem "nyan-cat-formatter"
end

 gem 'sass-rails', '~> 5.0'
